{
    "manifest_version": 3,
    "name": "My Vite Extension",
    "version": "1.0.0",
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "options_page": "src/options/index.html",
    "options_ui": {
        "page": "src/options/index.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/content.ts"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "src/background/background.ts"
    }
}